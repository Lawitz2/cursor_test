{{ define "base" }}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ template "title" . }} | Доктор Орлинская</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
    <style>
        :root { --spacing: 1rem; }
        .product-card { margin-bottom: var(--spacing); }
        .price { font-weight: bold; color: var(--primary); }
        .old-price { text-decoration: line-through; color: gray; font-size: 0.9em; margin-left: 0.5rem; }
        .sku { font-size: 0.8rem; color: gray; }
        nav strong a { color: inherit; text-decoration: none; }
    </style>
</head>
<body>
    <nav class="container-fluid">
        <ul>
            <li><strong><a href="/">Магазин «Доктор Орлинская»</a></strong></li>
        </ul>
        <ul>
            <li><a href="/cart">Корзина</a></li>
            <li><a href="/login" class="outline">Войти</a></li>
        </ul>
    </nav>
    <main class="container">
        {{ template "content" . }}
    </main>
    <footer class="container">
        <hr>
        <small>&copy; 2024 Доктор Орлинская. Все права защищены.</small>
    </footer>

    <script>
    // Глобальный обработчик для кнопок "В корзину"
    document.addEventListener('click', function(e) {
        if (e.target && e.target.classList.contains('add-to-cart')) {
            const productId = e.target.getAttribute('data-id');
            if (!productId) return;

            e.target.disabled = true;
            e.target.innerText = 'Добавляем...';

            fetch('/api/v1/cart/items', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ product_id: productId, qty: 1 })
            }).then(res => {
                if (res.ok) {
                    e.target.innerText = 'Добавлено!';
                    setTimeout(() => {
                        e.target.disabled = false;
                        e.target.innerText = 'В корзину';
                    }, 2000);
                } else {
                    alert('Ошибка при добавлении в корзину');
                    e.target.disabled = false;
                    e.target.innerText = 'В корзину';
                }
            }).catch(err => {
                console.error(err);
                e.target.disabled = false;
                e.target.innerText = 'В корзину';
            });
        }
    });
    </script>
</body>
</html>
{{ end }}
